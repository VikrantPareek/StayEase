<%layout("./layouts/boilerplate")%>
<body>
  <div class="col-12 col-md-6 offset-md-3 mt-3">
    <h1>Add New Listing</h1>
    <form
      action="/listings"
      method="post"
      enctype="multipart/form-data"
      class="needs-validation"
      novalidate
    >
      <div>
        <label for="title" class="form-label mt-2">Title</label>
        <input
          placeholder="enter title"
          type="text"
          id="title"
          name="title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title is required</div>
      </div>
      <div>
        <label for="description" class="form-label mt-2">Description</label>
        <textarea
          placeholder="enter description"
          class="form-control"
          name="description"
          id="description"
          required
        ></textarea>
        <div class="invalid-feedback">Description is required</div>
      </div>
      <div>
        <label for="image" class="form-label mt-2">Upload New Image</label>
        <input type="file" name="image" id="image" class="form-control" required/>
        <div class="invalid-feedback">Image is required</div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label mt-2">Price</label>
          <input
            type="number"
            placeholder="enter price"
            name="price"
            id="price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price can't be empty</div>
        </div>
        <div class="col-md-8">
          <label for="location" class="form-label mt-2">Location</label>
          <input
            placeholder="enter location"
            type="text"
            name="location"
            id="location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location is required</div>
        </div>
      </div>
      <div>
        <label for="country" class="form-label mt-2">Country</label>
        <input
          type="text"
          placeholder="enter country"
          name="country"
          id="country"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country can't be empty</div>
      </div>
      <button class="btn btn-dark mt-3 mb-3">Add</button>
    </form>
  </div>
</body>
